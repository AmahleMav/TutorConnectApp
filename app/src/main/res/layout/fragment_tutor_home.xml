<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    tools:context=".Views.tutor.fragments.TutorHomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/txtWelcomeTutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Tutor!"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtTutorLead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage your sessions, update availability, and track earnings â€” all in one place."
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Dashboard Cards -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:showDividers="middle"
            android:layout_marginBottom="24dp">

            <!-- My Bookings (kept) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming Sessions"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/txtUpcomingSessions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btnViewBookings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/white"
                        android:padding="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
