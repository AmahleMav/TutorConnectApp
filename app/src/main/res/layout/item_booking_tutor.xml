<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_background">

    <!-- Student Name -->
    <TextView
        android:id="@+id/txtTutorName"
        android:text="Student: Jane Doe"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Student Email -->
    <TextView
        android:id="@+id/txtTutorEmail"
        android:text="Email: student@gmail.com"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Day of Session -->
    <TextView
        android:id="@+id/txtDay"
        android:text="Day: Thursday"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Date of Session -->
    <TextView
        android:id="@+id/txtDate"
        android:text="Date of Session: 30/10/2025"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Time -->
    <TextView
        android:id="@+id/txtTime"
        android:text="Time: 08:00 - 09:00"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Session Type -->
    <TextView
        android:id="@+id/txtType"
        android:text="Type: One-on-One"
        android:textSize="14sp"
        android:textColor="#388E3C"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Status -->
    <TextView
        android:id="@+id/txtStatus"
        android:text="Status: Upcoming"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#F39C12"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:weightSum="3">

        <!-- Complete -->
        <Button
            android:id="@+id/btnConfirm"
            android:text="Complete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:backgroundTint="#00796B"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingHorizontal="4dp" />

        <!-- Cancel -->
        <Button
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingHorizontal="4dp" />

        <!-- Chat -->
        <Button
            android:id="@+id/btnComplete"
            android:text="Chat"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#6A1B9A"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingHorizontal="4dp" />
    </LinearLayout>

</LinearLayout>
