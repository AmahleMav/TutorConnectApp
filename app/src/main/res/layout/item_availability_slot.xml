<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mergedContainer"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="@drawable/item_background"
    android:layout_marginVertical="6dp"
    android:elevation="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">


    <!-- Time Slot Label -->
    <TextView
        android:id="@+id/txtHour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="08:00 - 09:00"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="08:00 - 09:00" />

    <!-- Availability Switch -->
    <Switch
        android:id="@+id/switchAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:trackTint="@color/teal_700"
        android:thumbTint="@color/teal_200"
        android:contentDescription="Toggle availability for this time slot" />

    <!-- Group Session Checkbox -->
    <CheckBox
        android:id="@+id/checkGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Group"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:contentDescription="Enable group session" />

    <!-- Max Students for Group -->
    <EditText
        android:id="@+id/etGroupSize"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:enabled="false"
        android:gravity="center"
        android:hint="#"
        android:inputType="number"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_gray"
        android:contentDescription="Maximum number of students in group" />



</LinearLayout>
